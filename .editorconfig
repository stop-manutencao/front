root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size =  2
trim_trailing_spaces = true
end_of_line = lf
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_style = space
indent_size =  2
trim_trailing_spaces = true
end_of_line = lf
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

# http://www.yaml.org/spec/1.2/spec.html#Syntax
[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.jade]
indent_style = space
indent_size =  2
trim_trailing_spaces = false
end_of_line = lf
charset = utf-8
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = false

[*.md]
indent_style = space
indent_size =  2
trim_trailing_spaces = false
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = false
